<h1>{{title}}</h1>
<div class="row no-padding">
    {{#each projects}}
    <div class="col-sm-4 mt-4 mb-4">
        <div class="card">
            <a href="#"><img class="card-img-top" src="{{this.image}}" alt="" height="250px" /></a>
            <div class="card-body">
                <h4 class="card-title">
                    <a href="#">{{this.title}}</a>
                </h4>
                <p class="card-text">
                    {{this.description}}
                </p>
                <a class="btn btn-primary" href="#">View Project
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
                <a class="btn btn-primary" href="#">Github
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>
        </div>
    </div>
    {{/each}}
</div>